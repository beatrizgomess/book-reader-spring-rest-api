 CREATE TYPE sex AS ENUM('Fem', 'MASC', 'Outro');

 CREATE TABLE role(
 ID INT GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
 NAME VARCHAR(255) NOT NULL
 );

 CREATE TABLE tb_user(ID SERIAL NOT NULL UNIQUE PRIMARY KEY,
 EMAIL VARCHAR(80) NOT NULL UNIQUE,
 NAME VARCHAR(80) NOT NULL,
 SURNAME VARCHAR(40),
 SEX sex,
 BIRTH_DATE DATE NOT NULL,
 STATE VARCHAR(80) NOT NULL,
 CITY VARCHAR(80) NOT NULL,
 PASSWORD VARCHAR(12) NOT NULL,
 IMAGE BYTEA
 );

 CREATE TABLE tb_books(ID SERIAL NOT NULL UNIQUE PRIMARY KEY,
 TITLE VARCHAR(120) NOT NULL,
 CAPTION VARCHAR(160) NOT NULL,
 AUTHOR TEXT [],
 YEAR_PUBLICATION DATE NOT NULL,
 LANGUAGE VARCHAR(30) NOT NULL,
 PUBLISHING_COMPANY VARCHAR(80) NOT NULL,
 SYNOPSIS TEXT [],
 IMAGE BYTEA
 );

 CREATE TABLE tb_author(ID SERIAL NOT NULL UNIQUE PRIMARY KEY,
 NAME VARCHAR(80) NOT NULL,
 GENRE TEXT [],
 BIRTH_DATE DATE,
 LOCATION VARCHAR(60),
 DESCRIPTION TEXT [],
 IMAGE BYTEA
 );

 CREATE TABLE tb_publishing_company(ID SERIAL NOT NULL UNIQUE PRIMARY KEY,
 NAME VARCHAR(80) NOT NULL,
 AUTHORS TEXT [],
 BOOKS TEXT [],
 IMAGE BYTEA,
 DESCRIPTION TEXT []
 );

